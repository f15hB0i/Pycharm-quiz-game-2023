import tkinter as tk
from tkinter import messagebox

class MotorcycleQuiz:
    def __init__(self, master):
        self.master = master
        self.score = 0
        self.current_question = 0

        self.questions = [
            {
                "question": "Which company manufactures the Ninja series of motorcycles?",
                "options": ["Yamaha", "Suzuki", "Honda", "Kawasaki"],
                "correct_option": 3
            },
            {
                "question": "What is the engine type of a Ducati Panigale V4?",
                "options": ["Inline-4", "V-Twin", "Parallel-Twin", "V4"],
                "correct_option": 3
            },
            {
                "question": "Which country is Triumph motorcycles originally from?",
                "options": ["United States", "Germany", "Japan", "United Kingdom"],
                "correct_option": 3
            },
            {
                "question": "In motorcycles, what does ABS stand for?",
                "options": ["Anti-Bounce System", "Automatic Braking System", "Anti-Lock Braking System", "Advanced Bike Suspension"],
                "correct_option": 2
            },
            {
                "question": "What is the top speed of the Suzuki Hayabusa?",
                "options": ["180 mph", "200 mph", "220 mph", "240 mph"],
                "correct_option": 3
            }
        ]

        self.question_label = tk.Label(self.master, text="")
        self.question_label.pack()

        self.radio_var = tk.IntVar()
        self.option_buttons = []
        for i in range(4):
            option_button = tk.Radiobutton(self.master, text="", variable=self.radio_var, value=i)
            option_button.pack()
            self.option_buttons.append(option_button)

        self.submit_button = tk.Button(self.master, text="Submit", command=self.submit_answer)
        self.submit_button.pack()

        self.next_question()

    def next_question(self):
        if self.current_question < len(self.questions):
            question = self.questions[self.current_question]
            self.question_label.config(text=question["question"])

            options = question["options"]
            for i in range(4):
                self.option_buttons[i].config(text=options[i])

            self.radio_var.set(-1)  # Deselect all options
        else:
            messagebox.showinfo("Quiz Complete", f"You have scored {self.score} out of {len(self.questions)}")

    def submit_answer(self):
        if self.radio_var.get() == -1:
            messagebox.showwarning("Warning", "Please select an option.")
        else:
            question = self.questions[self.current_question]
            if self.radio_var.get() == question["correct_option"]:
                self.score += 1

            self.current_question += 1
            self.next_question()

root = tk.Tk()
quiz = MotorcycleQuiz(root)
root.mainloop()
